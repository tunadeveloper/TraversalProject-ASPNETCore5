@using TraversalProject.EntityLayer.Concrete
@model List<Feature>
<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
                <div class="maghny-grid">
                    <figure class="effect-lily border-radius m-0" style="height:400px;position:relative;overflow:hidden">
                        <img class="img-fluid" src="@ViewBag.PopularContentImageUrl" alt="" style="width:100%;height:100%;object-fit:cover;min-height:0" />
                        <figcaption style="position:absolute;bottom:0;left:0;right:0;padding:1rem 1.25rem;background:linear-gradient(transparent,rgba(0,0,0,.85));color:#fff;margin:0">
                            <div style="position:relative">
                                <h4 style="margin:0 0 0.25rem 0;font-size:1.1rem;color:#fff">@ViewBag.PopularContentDescription</h4>
                                <p style="margin:0;font-size:0.9rem;color:rgba(255,255,255,.95)">@ViewBag.PopularContentTitle</p>
                            </div>
                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        @if (item.IsPopuler == true)
                        {
                            <div class="maghny-gd-1 col-6" style="margin-bottom:1rem">
                                <div class="maghny-grid">
                                    <figure class="effect-lily border-radius" style="height:200px;position:relative;overflow:hidden">
                                        <img class="img-fluid" src="@item.ImageUrl" alt="@item.Title" style="width:100%;height:100%;object-fit:cover;min-height:0" />
                                        <figcaption style="position:absolute;bottom:0;left:0;right:0;padding:0.75rem 1rem;background:linear-gradient(transparent,rgba(0,0,0,.85));color:#fff;margin:0">
                                            <div style="position:relative">
                                                <h4 style="margin:0 0 0.2rem 0;font-size:1rem;color:#fff">@item.Description</h4>
                                                <p style="margin:0;font-size:0.85rem;color:rgba(255,255,255,.95)">@item.Title</p>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>