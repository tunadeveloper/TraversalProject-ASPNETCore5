<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">Rezervasyon Özeti</h6>
        </div>
        <div class="card-body p-3">
            <h6 class="text-uppercase text-body text-xs font-weight-bolder">İstatistikler</h6>
            <ul class="list-group">
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                    <div class="d-flex align-items-center">
                        <span class="text-sm text-muted">Toplam Rezervasyon</span>
                    </div>
                    <span class="font-weight-bolder">@(ViewBag.Toplam ?? 0)</span>
                </li>
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                    <div class="d-flex align-items-center">
                        <span class="text-sm text-muted">Onay Bekleyen</span>
                    </div>
                    <span class="font-weight-bolder">@(ViewBag.OnayBekleyen ?? 0)</span>
                </li>
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                    <div class="d-flex align-items-center">
                        <span class="text-sm text-muted">Onaylanan</span>
                    </div>
                    <span class="font-weight-bolder">@(ViewBag.Onaylanan ?? 0)</span>
                </li>
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 border-radius-lg">
                    <div class="d-flex align-items-center">
                        <span class="text-sm text-muted">Geçmiş Rezervasyon</span>
                    </div>
                    <span class="font-weight-bolder">@(ViewBag.Gecmis ?? 0)</span>
                </li>
            </ul>
        </div>
    </div>
</div>
