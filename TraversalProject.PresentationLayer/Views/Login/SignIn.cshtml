@model UserSignInViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Giriş Yap</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Home/Index">Anasayfa</a></li>
                <li class="active">
                    <span class="fa fa-arrow-right mx-2"></span> Giriş Yap
                </li>
            </ul>
        </div>
    </div>
</section>

<section class="w3l-contact py-5">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row justify-content-center">
                <div class="col-lg-5 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Hesabınıza giriş yapın</h5>
                            <p class="mt-3 mb-4">E-posta adresiniz ve şifrenizle giriş yapabilirsiniz.</p>
                        </div>
                        <form asp-controller="Login" asp-action="SignIn" method="post" class="signin-form">
                            <div class="form-group">
                                <input asp-for="Username" class="contact-input" placeholder="Kullanıcı adı (E-posta)" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="contact-input" type="password" placeholder="Şifre" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="text-right mt-4">
                                <button type="submit" class="btn btn-style btn-primary">Giriş Yap</button>
                            </div>
                            <div class="mt-3">
                                <a href="/Login/SignUp">Hesabınız yok mu? Kayıt olun</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
