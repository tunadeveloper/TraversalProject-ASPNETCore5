@model UserRegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Kayıt Ol</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Home/Index">Anasayfa</a></li>
                <li class="active">
                    <span class="fa fa-arrow-right mx-2"></span> Kayıt Ol
                </li>
            </ul>
        </div>
    </div>
</section>

<section class="w3l-contact py-5">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row justify-content-center">
                <div class="col-lg-5 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Yeni hesap oluşturun</h5>
                            <p class="mt-3 mb-4">Aşağıdaki bilgileri doldurarak kayıt olabilirsiniz.</p>
                        </div>
                        <form asp-controller="Login" asp-action="SignUp" method="post" class="signin-form">
                            <div class="form-group">
                                <input asp-for="NameSurname" class="contact-input" placeholder="Ad Soyad" />
                                <span asp-validation-for="NameSurname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" class="contact-input" type="email" placeholder="E-posta" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="contact-input" type="password" placeholder="Şifre" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="text-right mt-4">
                                <button type="submit" class="btn btn-style btn-primary">Kayıt Ol</button>
                            </div>
                            <div class="mt-3">
                                <a href="/Login/SignIn">Zaten hesabınız var mı? Giriş yapın</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
