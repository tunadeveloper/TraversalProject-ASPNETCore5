@using TraversalProject.EntityLayer.Concrete
@model Contact

@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">İletişim</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index">Anasayfa</a></li>
                <li class="active">
                    <span class="fa fa-arrow-right mx-2"></span> İletişim
                </li>
            </ul>
        </div>
    </div>
</section>

<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">

                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Bize Ulaşın</h5>
                            <p class="mt-3 mb-4">
                                Ekibimizle iletişime geçmekten çekinmeyin.
                                E-posta, telefon veya form üzerinden bizimle her zaman iletişime geçebilirsiniz.
                            </p>
                        </div>

                        <div class="hours">
                            <h6 class="mt-4">E-posta:</h6>
                            <p>
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </p>

                            <h6 class="mt-4">Adres:</h6>
                            <p>@Model.Address</p>

                            <h6 class="mt-4">Telefon:</h6>
                            <p class="margin-top">
                                <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                            </p>
                        </div>
                    </div>
                </div>

                @await Component.InvokeAsync("_SendMessageComponentPartial", new ContactUs())

            </div>

            <div class="map mt-5 pt-md-5">
                <h5>Harita</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1str!2str!4v1493028309728"
                        style="border:0"
                        allowfullscreen="">
                </iframe>
            </div>
        </div>
    </div>
</section>
