@model TraversalProject.PresentationLayer.Models.CommentAndDestinationList
@{
    ViewData["Title"] = Model.Destination?.Title ?? "Rota Detayı";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Tur Detayları</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Home/Index">Anasayfa</a></li>
                <li><a href="/Destination/Index">Rotalar</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2"></span> @Model.Destination.City</li>
            </ul>
        </div>
    </div>
</section>

<section class="grids-1 py-5">
    <div class="container py-lg-4 py-md-4">
        <div class="card border-0 shadow-sm overflow-hidden" style="border-radius:12px">
            <div class="row g-0">
                <div class="col-lg-5" style="min-height:320px">
                    <img src="@(Model.Destination.CoverImageUrl ?? Model.Destination.ImageUrl)" alt="@Model.Destination.City" class="img-fluid" style="width:100%;height:100%;object-fit:cover" />
                </div>
                <div class="col-lg-7 p-4 p-lg-5 d-flex flex-column justify-content-center">
                    <h1 class="h3 mb-3 fw-bold">@Model.Destination.Title</h1>
                    <p class="text-muted mb-4">@Model.Destination.Description</p>
                    <div class="row g-3 mb-4">
                        <div class="col-6 col-md-3">
                            <div class="text-muted small">Şehir</div>
                            <div class="fw-semibold">@Model.Destination.City</div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-muted small">Süre</div>
                            <div class="fw-semibold">@Model.Destination.DayNight</div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-muted small">Kapasite</div>
                            <div class="fw-semibold">@Model.Destination.Capacity kişi</div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="text-muted small">Fiyat</div>
                            <div class="fw-semibold text-primary">$@Model.Destination.Price</div>
                        </div>
                    </div>
                    <a href="/Contact/Index" class="btn btn-style btn-primary align-self-start" id="reservation">Rezervasyon Yap</a>
                </div>
            </div>
        </div>

        <div class="mt-5 pt-md-4">
            @if (User.Identity.IsAuthenticated)
            {
                @await Component.InvokeAsync("_CreateCommentComponentPartial", Model)
            }
            else
            {
                <div class="alert alert-warning border-0 shadow-sm">
                    Yorum yapabilmek için <a href="/Login/SignIn" class="alert-link">giriş yapmalısınız</a>.
                </div>
            }

            <h3 class="hny-title mb-4 mt-5">Yorumlar</h3>

            @if (Model.Comments != null && Model.Comments.Any())
            {
                @foreach (var comment in Model.Comments)
                {
                    <div class="card border-0 shadow-sm mb-3 p-3" style="border-radius:10px">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white fw-bold" style="width:48px;height:48px;font-size:1.1rem">@(comment.NameSurname?.Substring(0, 1) ?? "?")</div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="fw-semibold mb-1">@comment.NameSurname <span class="text-muted fw-normal small">@comment.CreatedDate.ToString("dd MMMM yyyy")</span></h6>
                                <p class="mb-0 text-secondary">@comment.UserComment</p>
                            </div>
                        </div>
                    </div>
                }

                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Yorum sayfaları" class="mt-4">
                        <ul class="pagination justify-content-center mb-0">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("DestinationDetails", "Destination", new { id = Model.Destination.DestinationId, page = i })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <p class="text-muted">Henüz yorum yapılmamış.</p>
            }
        </div>
    </div>
</section>
