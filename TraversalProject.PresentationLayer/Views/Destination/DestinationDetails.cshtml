@model TraversalProject.PresentationLayer.Models.CommentAndDestinationList

@{
    ViewData["Title"] = "Destination Details";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Tur Detayları</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Home/Index/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2"></span> @Model.Destination.Title </li>
            </ul>
        </div>
    </div>
</section>

<div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h3 class="blog-desc-big text-center mb-4">
            @Model.Destination.Title
        </h3>
        <div class="single-post-image">
            <div class="post-content">
                <img src="@Model.Destination.CoverImageUrl" class="radius-image img-fluid mb-5" alt="@Model.Destination.Title" />
            </div>
        </div>

        <div class="single-post-content text-left">
            <p class="mb-4">
                @Model.Destination.Description
            </p>

            <div class="container my-5">
                <div class="card shadow-lg border-0 radius-image">
                    <div class="row g-0">
                        <div class="col-md-5">
                            <img src="@Model.Destination.CoverImageUrl" class="img-fluid h-100 w-100 rounded-start" alt="@Model.Destination.Title" />
                        </div>
                        <div class="col-md-7 d-flex flex-column justify-content-center p-4">
                            <h2 class="fw-bold text-primary mb-3">@Model.Destination.Title</h2>

                            <div class="row mb-3">
                                <div class="col-6 mb-2">
                                    <span class="fw-bold text-dark">Şehir:</span> @Model.Destination.City
                                </div>
                                <div class="col-6 mb-2">
                                    <span class="fw-bold text-dark">Süre:</span> @Model.Destination.DayNight
                                </div>
                                <div class="col-6 mb-2">
                                    <span class="fw-bold text-dark">Kapasite:</span> @Model.Destination.Capacity Kişi
                                </div>
                                <div class="col-6 mb-2">
                                    <span class="fw-bold text-dark">Fiyat:</span> @Model.Destination.Price.ToString("C0")
                                </div>
                            </div>

                            <a href="#reservation" class="btn btn-primary btn-lg mt-2 px-4">
                                <i class="fa fa-plane-departure me-2"></i> Rezervasyon Yap
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container my-5">
                @if (User.Identity.IsAuthenticated)
                {
                    @await Component.InvokeAsync("_CreateCommentComponentPartial")
                }
                else
                {
                    <div class="alert alert-warning mt-4">
                        Yorum yapabilmek için <a href="/Login/SignIn">giriş yapmalısınız</a>.
                    </div>
                }
                <br /><br />
                <h3 class="fw-bold mb-4">💬 Yorumlar</h3>

                @if (Model.Comments != null && Model.Comments.Any())
                {
                    foreach (var comment in Model.Comments)
                    {
                        <div class="card mb-3 shadow-sm border-0">
                            <div class="card-body d-flex">
                                <img src="/user.png" class="rounded-circle" width="45" height="45" alt="User" style="margin-right: 10px;" />
                                <div>
                                    <h6 class="fw-bold mb-1">
                                        @comment.NameSurname
                                        <small class="text-muted">(@comment.CreatedDate.ToString("dd MMMM yyyy"))</small>
                                    </h6>
                                    <p class="mb-0">@comment.UserComment</p>
                                </div>
                            </div>
                        </div>
                    }

                    <nav aria-label="Yorum sayfaları">
                        <ul class="pagination justify-content-center mt-4">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("DestinationDetails", new { id = Model.Destination.DestinationId, page = i })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }

            </div>
        </div>
    </div>
</div>
