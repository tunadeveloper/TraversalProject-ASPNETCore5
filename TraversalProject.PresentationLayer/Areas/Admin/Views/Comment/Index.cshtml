@using TraversalProject.EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Yorumlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yorumlar</h1>
<table class="table table-bordered align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>E-Posta</th>
            <th>Yorum</th>
            <th>Rota</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CommentId</td>
                <td>@item.Email</td>
                <td>@(item.UserComment.Length > 30 ? item.UserComment.Substring(0, 30) + "..." : item.UserComment)</td>
                <td>@item.Destination.City</td>
                <td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
                <td>
                    <a href="/Admin/Comment/DeleteComment/@item.CommentId" class="btn btn-outline-danger">Sil</a>
                    <button type="button"
                            class="btn btn-outline-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#commentModal_@item.CommentId">
                        Detay
                    </button>
                </td>
            </tr>

            <div class="modal fade" id="commentModal_@item.CommentId" tabindex="-1" aria-labelledby="commentModalLabel_@item.CommentId" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="commentModalLabel_@item.CommentId">Yorum Detayı</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-2">
                                <strong>Adı Soyadı:</strong> @item.NameSurname
                            </div>
                            <div class="mb-2">
                                <strong>E-Posta Adresi:</strong> @item.Email
                            </div>
                            <div class="mb-2">
                                <strong>Rota:</strong> @item.Destination.City
                            </div>
                            <div class="mb-2">
                                <strong>Tarih:</strong> @item.CreatedDate.ToString("dd MMMM yyyy")
                            </div>
                            <hr />
                            <p class="text-secondary">@item.UserComment</p>
                        </div>
                        <div class="modal-footer">
                            <a href="/Admin/Comment/DeleteComment/@item.CommentId" class="btn btn-danger">Sil</a>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
