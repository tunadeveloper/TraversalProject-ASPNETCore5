@using TraversalProject.PresentationLayer.Areas.Admin.Models
@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h1>APi Ziyaretçi Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Ülke</th>
        <th>E-Posta</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.VisitorId</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Email</td>
            <td>
                <a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorId" class="btn btn-outline-danger">Sil</a>
            </td>
            <td>
                <a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorId" class="btn btn-outline-success">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Admin/VisitorApi/CreateVisitor/" class="btn btn-primary">Yeni Ekle</a>