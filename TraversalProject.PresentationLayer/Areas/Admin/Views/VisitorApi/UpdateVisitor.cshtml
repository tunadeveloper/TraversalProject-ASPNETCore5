@using TraversalProject.PresentationLayer.Areas.Admin.Models
@model VisitorViewModel
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateVisitor</h1>
<form method="post">
    <input type="hidden" name="VisitorId" value="@Model.VisitorId"/>
    <div class="form-group mb-3">
        <label>Ad</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name"/>
    </div>

    <div class="form-group mb-3">
        <label>Soyad</label>
        <input type="text" name="Surname" class="form-control" value="@Model.Surname"/>
    </div>

    <div class="form-group mb-3">
        <label>Şehir</label>
        <input type="text" name="City" class="form-control" value="@Model.City"/>
    </div>

    <div class="form-group mb-3">
        <label>Ülke</label>
        <input type="text" name="Country" class="form-control" value="@Model.Country"/>
    </div>

    <div class="form-group mb-3">
        <label>E-Posta</label>
        <input type="text" name="Email" class="form-control" value="@Model.Email"/>
    </div>
    <button class="btn btn-primary">Güncelle</button>
</form>
