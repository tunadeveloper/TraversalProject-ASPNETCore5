@using TraversalProject.PresentationLayer.CQRS.Results.GuideResults
@model GetGuideByIdQueryResult

@{
    ViewData["Title"] = "Rehber Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Rehber Güncelle</h2>

<form method="post" class="mt-3">

    <input type="hidden" name="GuideId" value="@Model.GuideId" />

    <div class="form-group mb-3">
        <label>Ad Soyad</label>
        <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Görsel Url</label>
        <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>X Url</label>
        <input type="text" name="XUrl" value="@Model.XUrl" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Instagram Url</label>
        <input type="text" name="InstagramUrl" value="@Model.InstagramUrl" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Açıklama</label>
        <textarea name="Description" class="form-control" rows="4">@Model.Description</textarea>
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
    <a href="/Admin/Guide/Index" class="btn btn-secondary">İptal</a>
</form>