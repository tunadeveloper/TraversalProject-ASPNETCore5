@using TraversalProject.EntityLayer.Concrete
@model List<ContactUs>
@{
    ViewData["Title"] = "İletişim Mesajları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>İletişim Mesajları</h1>

<table class="table table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Adı Soyadı</th>
            <th>E-Posta Adresi</th>
            <th>Konu</th>
            <th>Mesaj</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ContactUsId</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>@(item.Content != null && item.Content.Length > 50 ? item.Content.Substring(0, 50) + "..." : item.Content)</td>
                <td>@item.MessageDate</td>
                <td><a href="#" class="btn btn-outline-danger btn-sm">Sil</a></td>
                <td><a href="#" class="btn btn-outline-warning btn-sm">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>

