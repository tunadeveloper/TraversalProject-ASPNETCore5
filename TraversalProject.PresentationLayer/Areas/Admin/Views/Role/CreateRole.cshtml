@model TraversalProject.EntityLayer.Concrete.AppRole
@{
    ViewData["Title"] = "Rol Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 border-bottom">
        <h5 class="card-title mb-0 fw-semibold">Rol Ekle</h5>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <form method="post" action="@Url.Action("CreateRole", "Role", new { area = "Admin" })">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Rol Adı</label>
                <input asp-for="Name" class="form-control" name="Name" placeholder="Rol adı giriniz" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Ekle</button>
                <a href="@Url.Action("Index", "Role", new { area = "Admin" })" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
