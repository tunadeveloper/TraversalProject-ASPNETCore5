@model List<TraversalProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0 fw-semibold">Kullanıcı Listesi</h5>
        <a href="@Url.Action("Index", "Role", new { area = "Admin" })" class="btn btn-outline-secondary btn-sm">Rollere Dön</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 py-3 ps-4">#</th>
                        <th class="border-0 py-3">Ad Soyad</th>
                        <th class="border-0 py-3">Kullanıcı Adı</th>
                        <th class="border-0 py-3">E-Posta</th>
                        <th class="border-0 py-3 pe-4 text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var no = 1;
                        foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4">@no</td>
                                <td>@(user.NameSurname ?? "-")</td>
                                <td>@(user.UserName ?? "-")</td>
                                <td>@(user.Email ?? "-")</td>
                                <td class="pe-4 text-end">
                                    <a href="@Url.Action("AssignRole", "Role", new { area = "Admin", id = user.Id })" class="btn btn-outline-info btn-sm">Rol Ata</a>
                                    <a href="@Url.Action("UserCommentDetail", "User", new { area = "Admin", id = user.Id })" class="btn btn-outline-primary btn-sm">Yorumlar</a>
                                    <a href="@Url.Action("UserReservation", "User", new { area = "Admin", id = user.Id })" class="btn btn-outline-dark btn-sm">Tur Geçmişi</a>
                                    <a href="@Url.Action("UpdateUser", "User", new { area = "Admin", id = user.Id })" class="btn btn-outline-warning btn-sm">Güncelle</a>
                                </td>
                            </tr>
                            no++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Kayıtlı kullanıcı bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
