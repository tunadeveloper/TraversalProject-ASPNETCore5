@model TraversalProject.EntityLayer.Concrete.AppRole
@{
    ViewData["Title"] = "Rol Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 border-bottom">
        <h5 class="card-title mb-0 fw-semibold">Rol Güncelle</h5>
    </div>
    <div class="card-body">
        <form asp-action="UpdateRole" asp-controller="Role" asp-area="Admin" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="mb-3">
                <label for="Name" class="form-label">Rol Adı</label>
                <input type="text" id="Name" name="Name" class="form-control" placeholder="Rol adı giriniz" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="@Url.Action("Index", "Role", new { area = "Admin" })" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
