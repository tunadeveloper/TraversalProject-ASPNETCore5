@model List<TraversalProject.PresentationLayer.Areas.Admin.Models.RoleAssignViewModel>
@{
    ViewData["Title"] = "Rol Ata";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var userId = ViewBag.UserId as int?;
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0 fw-semibold">Rol Ata: @ViewBag.NameSurname</h5>
        <a href="@Url.Action("UserList", "Role", new { area = "Admin" })" class="btn btn-outline-secondary btn-sm">Kullanıcı Listesine Dön</a>
    </div>
    <div class="card-body">
        <form asp-action="AssignRole" asp-controller="Role" asp-area="Admin" method="post">
            <input type="hidden" name="id" value="@userId" />
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0 py-3 ps-4" style="width: 50px;">Seç</th>
                                <th class="border-0 py-3">Rol Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <input type="checkbox" name="roleIds" value="@item.RoleId" class="form-check-input" @(item.RoleExist ? "checked" : "") />
                                    </td>
                                    <td>@item.RoleName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Rol Ata</button>
                    <a href="@Url.Action("UserList", "Role", new { area = "Admin" })" class="btn btn-outline-secondary">İptal</a>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">Sistemde tanımlı rol bulunamadı. Önce rol ekleyin.</p>
                <a href="@Url.Action("Index", "Role", new { area = "Admin" })" class="btn btn-outline-primary btn-sm mt-2">Rol Yönetimi</a>
            }
        </form>
    </div>
</div>
