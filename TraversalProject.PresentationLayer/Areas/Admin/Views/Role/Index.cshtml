@model List<TraversalProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Roller";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0 fw-semibold">Roller</h5>
        <div class="d-flex gap-2">
            <a href="@Url.Action("UserList", "Role", new { area = "Admin" })" class="btn btn-outline-primary btn-sm">Kullanıcı Listesi</a>
            <a href="@Url.Action("CreateRole", "Role", new { area = "Admin" })" class="btn btn-primary btn-sm">Ekle</a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 py-3 ps-4">#</th>
                        <th class="border-0 py-3">Rol Adı</th>
                        <th class="border-0 py-3 pe-4 text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var no = 1;
                        foreach (var role in Model)
                        {
                            <tr>
                                <td class="ps-4">@no</td>
                                <td>@role.Name</td>
                                <td class="pe-4 text-end">
                                    <a href="@Url.Action("UpdateRole", "Role", new { area = "Admin", id = role.Id })" class="btn btn-outline-warning btn-sm">Güncelle</a>
                                    <form asp-action="DeleteRole" asp-controller="Role" asp-area="Admin" method="post" class="d-inline" onsubmit="return confirm('Bu rolü silmek istediğinize emin misiniz?');">
                                        <input type="hidden" name="id" value="@role.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Sil</button>
                                    </form>
                                </td>
                            </tr>
                            no++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">Kayıtlı rol bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
