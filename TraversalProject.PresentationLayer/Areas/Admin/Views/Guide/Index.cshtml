@using TraversalProject.EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Rehberler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehberler</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.GuideId</td>
            <td><img src="@item.ImageUrl" width="50px" alt="Alternate Text" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>
                <a href="@(item.Status ? $"/Admin/Guide/ChangeToFalse/{item.GuideId}" : $"/Admin/Guide/ChangeToTrue/{item.GuideId}") " class="btn @(item.Status ? "btn-outline-danger" : "btn-outline-success")">@(item.Status ? "Pasif Yap" : "Aktif Yap")</a>
            </td>

            <td><a href="/Admin/Guide/UpdateGuide/@item.GuideId" class="btn btn-outline-primary">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/CreateGuide/" class="btn btn-outline-success">Yeni Rehber</a>