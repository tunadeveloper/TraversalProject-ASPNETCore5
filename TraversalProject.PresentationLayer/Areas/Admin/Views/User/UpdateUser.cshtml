@using TraversalProject.EntityLayer.Concrete
@model AppUser
@{
    ViewData["Title"] = "Kullanıcı Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Kullanıcı Güncelle</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <form method="post" action="@Url.Action("UpdateUser", "User", new { area = "Admin" })">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model?.Id" />
            <div class="mb-3">
                <label class="form-label">Ad Soyad</label>
                <input type="text" name="NameSurname" class="form-control" value="@Model?.NameSurname" placeholder="Ad Soyad" />
            </div>
            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                <input type="text" name="UserName" class="form-control" value="@Model?.UserName" placeholder="Kullanıcı adı" />
            </div>
            <div class="mb-3">
                <label class="form-label">E-posta</label>
                <input type="email" name="Email" class="form-control" value="@Model?.Email" placeholder="E-posta" />
            </div>
            <div class="mb-3">
                <label class="form-label">Telefon</label>
                <input type="text" name="PhoneNumber" class="form-control" value="@Model?.PhoneNumber" placeholder="Telefon" />
            </div>
            <div class="mb-3">
                <label class="form-label">Profil Resmi URL</label>
                <input type="text" name="ImageUrl" class="form-control" value="@Model?.ImageUrl" placeholder="/userImages/..." />
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
