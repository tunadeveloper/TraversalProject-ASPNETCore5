@using TraversalProject.EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "Kullanıcı Rezervasyonları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var list = Model ?? new List<Reservation>();
}

<h1 class="mb-4">Onaylanan Rezervasyonlar</h1>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Rota</th>
                        <th>Kişi Sayısı</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @if (list.Any())
                    {
                        foreach (var item in list)
                        {
                            <tr>
                                <td>@item.ReservationID</td>
                                <td>@(item.AppUser?.NameSurname ?? "—")</td>
                                <td>@(item.Destination?.City ?? "—")</td>
                                <td>@(item.PersonCount ?? "—")</td>
                                <td>@item.ReservationDate.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Onaylanmış rezervasyon bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<p class="mt-3">
    <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="btn btn-outline-secondary">Kullanıcı Listesine Dön</a>
</p>
