@using TraversalProject.EntityLayer.Concrete
@model List<AppUser>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Kullanıcılar</h1>
<table class="table table-bordered align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>E-Posta</th>
            <th>Yorumlar</th>
            <th>Tur Geçmişi</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NameSurname</td>
                <td>@item.Email</td>

                <td>
                    <a href="/Admin/User/UserCommentDetail/@item.Id" class="btn btn-outline-primary">Yorumlar</a>
                </td>
                <td>
                    <a href="/Admin/User/UserReservation/@item.Id" class="btn btn-outline-dark">Tur Geçmişi</a>
                </td>
                <td>
                    <a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a>
                </td>
                <td>
                    <a href="/Admin/User/UpdateUser/@item.Id" class="btn btn-outline-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Login/SıgnUp/" class="btn btn-outline-success">Yeni Kullanıcı</a>