@using TraversalProject.PresentationLayer.CQRS.Results.DestinationResults
@model List<GetAllDestinationQueryResult>

@{
    ViewData["Title"] = "Rota Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="mb-0">Destinasyonlar</h4>
            <small class="text-muted">
                Sistemde kayıtlı tüm seyahat rotaları listelenmektedir.
            </small>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">

            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Şehir</th>
                            <th>Süre</th>
                            <th>Fiyat</th>
                            <th>Kapasite</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.City</strong>
                                </td>
                                <td>@item.DayNight</td>
                                <td>
                                    <span class="badge bg-primary">
                                        @item.Price.ToString("N0") ₺
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @item.Capacity Kişi
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    Henüz tanımlanmış bir destinasyon bulunmamaktadır.
                </div>
            }

        </div>
    </div>

</div>
