@using TraversalProject.PresentationLayer.CQRS.Results.DestinationResults
@model List<GetAllDestinationQueryResult>

@{
    ViewData["Title"] = "Rota Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="mb-0">Destinasyonlar</h4>
            <small class="text-muted">
                Sistemde kayıtlı tüm seyahat rotaları
            </small>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">

            @if (Model != null && Model.Any())
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Şehir</th>
                            <th>Süre</th>
                            <th>Fiyat</th>
                            <th>Kapasite</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><strong>@item.City</strong></td>
                                <td>@item.DayNight</td>
                                <td>
                                    <span class="badge bg-primary">
                                        @item.Price.ToString("N0") ₺
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @item.Capacity Kişi
                                    </span>
                                </td>
                                <td class="text-end">

                                    <a href="/Admin/DestinationCqrs/GetDestination/@item.Id"
                                       class="btn btn-sm btn-outline-warning">
                                        Güncelle
                                    </a>

                                    <a href="/Admin/DestinationCqrs/DeleteDestination/@item.Id"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Bu destinasyonu silmek istiyor musunuz?')">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    Henüz kayıtlı destinasyon bulunmamaktadır.
                </div>
            }

        </div>
    </div>
    <br />
    <a href="/Admin/DestinationCqrs/CreateDestination/"
       class="btn btn-success mb-3">
        Destinasyon Ekle
    </a>
</div>
