@using TraversalProject.PresentationLayer.CQRS.Results.DestinationResults
@model GetAllDesinationByIdQueryResult

@{
    ViewData["Title"] = "Destinasyon Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="mb-3">
        <h4 class="mb-0">Destinasyon Güncelle</h4>
        <small class="text-muted">
            Seçilen destinasyon bilgilerini düzenleyebilirsiniz
        </small>
    </div>

    <div class="card shadow-sm col-md-6 p-0">
        <div class="card-body">

            <form method="post">
                <input type="hidden" name="Id" value="@Model.Id"/>

                <div class="mb-3">
                    <label class="form-label">Şehir</label>
                    <input type="text"
                           class="form-control"
                           name="City"
                           value="@Model.City"
                           placeholder="Şehir adı" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Süre (Gün / Gece)</label>
                    <input type="text"
                           class="form-control"
                           name="DayNight"
                           value="@Model.DayNight"
                           placeholder="Örn: 3 Gün 2 Gece" />
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="/Admin/DestinationCqrs/Index"
                       class="btn btn-outline-secondary">
                        Vazgeç
                    </a>

                    <button type="submit"
                            class="btn btn-primary">
                        Güncelle
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>
